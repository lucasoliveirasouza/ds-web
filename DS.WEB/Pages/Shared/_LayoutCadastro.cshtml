@{
    Layout = "_Layout";
}

<form id="conteudo" method="post">
    <div class="alert alert-success d-none" role="alert" id="realizando-processamento">
        <div class="d-flex align-items-center">
            <h4 class="alert-heading">Só um momento!</h4>
            <div class="spinner-border ms-auto text-primary" role="status" aria-hidden="true"></div>
        </div>
        <p>Estamos obtendo as informações solicitadas!</p>
    </div>
    <div class="card mb-5 mt-3">
        <div class="card-body p-4">
            <div class="row mb-3">
                <h2 class="text-primary titulo-funcao">@(ViewData["tituloFuncao"] ?? "")</h2>
            </div>    
            <div class="d-flex mt-0 mb-3 px-4 barraFerramentas">
                <div class="d-flex barraFerramentasBotoesEsquerda px-3" id="barraFerramentasBotoesEsquerda"></div>
                <div class="d-flex barraFerramentasBotoesDireita px-3">
                    <button type="button" id="cancelar" class="botao-cancelar btn btn-danger py-2 my-0 px-4">
                        <i style="color: white;" class="me-2 fa fa-times"></i>Cancelar
                    </button>
                    <button type="button" id="gravar" class="botao-cadastrar btn btn-primary-dark py-2 my-0 px-4">
                        <i style="color: white;" class="me-2 fa fa-save"></i>Gravar
                    </button>
                </div>
            </div>
            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <input type="submit" id="formManutencaoSubmit" hidden/>
</form>